<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    
    
    <link href="~/Content/SharedCss/navbar.css" rel="stylesheet" />
    

</head>
<body>
    <header>
        <nav class="navbar">

            <div class="logo"><a class="t" href="/">ResearchGate</a></div>

            
            <div>
                @using (Html.BeginForm("search", "Home", FormMethod.Post))
                {
                    <div style="display:flex;">
                        <div>
                            <input type="text" placeholder="Search.." name="search" class="search_input">
                        </div>
                            <!--input type="submit">-->
                            <!--
                            <input type="radio" name="option" value="name">
                            <label for="name" class="label//tion">name</label>

                            <input type="radio" name="option" value="email">
                            <label for="email" class="label_option">email</label>

                            <input type="radio" name="option" value="University">
                            <label for="university" class="label_option">University</label>-->
                        <div>
                            <button  name="option" value="name" class="search_btn"> name </button>
                            <button  name="option" value="email" class="search_btn"> email </button>
                            <button name="option" value="University" class="search_btn"> university </button>
                        </div>
                    </div>
                }
            </div>

            <ul class="nav-links">

                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="/Profile/@User.Identity.Name">My Profile</a>
                    </li>
                    <li>
                        <a href="/Account/Logout">Log out</a>
                    </li>
                }
                else
                {
                    <li class="log"><a href="/login">Log in</a></li>
                    <li class="sign"><a href="/register">Sign up</a></li>
                }


            </ul>
        </nav>
    </header>




    <div class="container body-content">
        @RenderBody()


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
